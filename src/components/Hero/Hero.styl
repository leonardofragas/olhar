.Hero
  background black
  min-height 100vh

  .Stroke
    width 100%
    height 10px
    background: linear-gradient(90deg, #4200FF 0%, #FF00B8 70%);

.HeroContainer
  display: flex
  min-height 80vh

  .row 
    @media screen and (max-width: 576px) {
      flex-direction column
      align-content center
    }

.HeroCopy 
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  align-items: flex-start;
  justify-content: center;
  color white

  @media screen and (max-width: 576px) {
    text-align: center
  }

.HeroCopy 
  h1 
    font-size 40px
    font-weight: 700
    line-height: 60px
    max-width: 80%

    @media screen and (max-width: 576px) {
      width 100%
      max-width: 100%
      font-size: 26px
      line-height 30px
    }

  h2 
    font-size: 12px
    max-width: 70%
    margin-top 16px
    margin-bottom 40px

.CTAGroup
  display flex !important
  padding-left 10px
  flex-wrap: nowrap !important
  column-gap: 10px

  @media screen and (max-width: 576px) {
    flex-direction row !important
    flex-wrap wrap !important
    width 100%
    align-self center
    row-gap: 10px
    padding-bottom 10px
    padding-left 0
  }

.CoursesCards 
    display: flex;
    flex-direction: row;
    column-gap: 20px;
    align-items: center
    align-content: center

    .verticalColumn
      display flex
      flex-direction column
      row-gap 25px

      .card 
        height 150px

      .card-body
        background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 60%);
        display flex
        justify-content: center
        align-items center
        height 40%
        width 100%
        border-radius 4px

        .card-title 
          color white
          font-size 10px
          width 60%
          font-weight: 700
          text-align: center

      .moreCourses
        border 2px rgba(255,255,255,.25) solid
        background transparent 
        display flex 
        align-items center

        .card-body

          .card-title
            font-size 18px

    .card
      border none
      border-radius 8px
      overflow: hidden
      height 500px

    .card-img-top
      border-radius 8px
      transform scale(1.1)

    .card-body 
      background white
      display flex
      justify-content: center
      align-items center
      height 30%
      width 100%
      border-radius 8px

      .card-title 
        font-size 14px
        width 60%
        font-weight: 700
        text-align: center

    